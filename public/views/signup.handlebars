<div>
    <form action="/users/signup" method="post" id="signupForm">
        <div>
            <span>请输入账号：</span>
            <input type="text" id="account" name="account">
        </div>
        <div>
            <span>请输入密码：</span>
            <input type="text" id="password" name="password">
        </div>
        <div>
            <span>确认密码：</span>
            <input type="text" id="confirm" name="confirm">
        </div>
        <div>
            <button id="signup">注册</button>
            <button id="reset" type="reset">重置</button>
        </div>
    </form>
</div>